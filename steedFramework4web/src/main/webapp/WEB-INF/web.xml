	<!-- 全局参数 -->
	<display-name>星超越管理系统</display-name>
	<welcome-file-list>
		<!-- <welcome-file>index.act</welcome-file> -->
		<!-- <welcome-file>index.htm</welcome-file> -->
		<welcome-file>/admin/index.jsp</welcome-file>
		<!-- <welcome-file>index.htm</welcome-file> -->
		<!-- <welcome-file>index.jsp</welcome-file> -->
	</welcome-file-list>
	<listener>
		<listener-class>steed.ext.listener.BeyondstarInitListener</listener-class>
	</listener>
	<listener>
		<listener-class>steed.listener.SessionListener</listener-class>
	</listener>


	<!-- 编码过滤器 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>steed.filter.EncodingFilter</filter-class>
		<!-- <init-param>
			<param-name>character_set</param-name>
			<param-value>UTF-8</param-value>
		</init-param> -->
	</filter>
	<!-- <filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping> -->
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.act</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.service</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.servlet</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.css</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>

	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>

	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.html</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.htm</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.js</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	
	<!-- 压缩过滤器 -->
	<filter>
		<filter-name>compressFilter</filter-name>
		<filter-class>steed.filter.CompressFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>compressFilter</filter-name>
		<url-pattern>*.css</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>

	<filter-mapping>
		<filter-name>compressFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>

	<filter-mapping>
		<filter-name>compressFilter</filter-name>
		<url-pattern>*.html</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>compressFilter</filter-name>
		<url-pattern>*.htm</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>compressFilter</filter-name>
		<url-pattern>*.js</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<!-- 重定向到index过滤器 -->
	<filter>
		<filter-name>reditIndexFilter</filter-name>
		<filter-class>steed.filter.ReditIndexFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>reditIndexFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	
		<!-- 动态页过滤器 -->
	<filter>
		<filter-name>dinamicFilter</filter-name>
		<filter-class>steed.filter.DinamicFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>dinamicFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>dinamicFilter</filter-name>
		<url-pattern>*.htm</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>dinamicFilter</filter-name>
		<url-pattern>*.act</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
		<!-- 全局过滤器，过滤所有请求 -->
	<filter>
		<filter-name>ContextFilter</filter-name>
		<filter-class>steed.filter.ContextFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ContextFilter</filter-name>
		<url-pattern>*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<!-- 微信消息接收servlet -->
	<servlet>
		<servlet-name>WechatServlet</servlet-name>
		<servlet-class>steed.servlet.WechatServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WechatServlet</servlet-name>
		<url-pattern>/wechat/wechatInterface.jsp</url-pattern>
	</servlet-mapping>
	<!-- 扫描二维码支付回调servlet -->
	<servlet>
		<servlet-name>ScanPayCallBackServlet</servlet-name>
		<servlet-class>steed.servlet.WechatScanPayCallBackServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ScanPayCallBackServlet</servlet-name>
		<url-pattern>/wechat/scanPayCallBackServlet.jsp</url-pattern>
	</servlet-mapping>
	
	
	<!-- 管理员过滤器 -->
	<filter>
		<filter-name>adminFilter</filter-name>
		<filter-class>steed.ext.filter.AdminFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>adminFilter</filter-name>
		<url-pattern>/admin/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<!-- 用户过滤器 -->
	<filter>
		<filter-name>userFilter</filter-name>
		<filter-class>steed.ext.filter.UserFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>userFilter</filter-name>
		<url-pattern>/user/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<!-- 用户过滤器 -->
	<filter>
		<filter-name>ProvideFilter</filter-name>
		<filter-class>steed.ext.filter.ProvideFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ProvideFilter</filter-name>
		<url-pattern>/provider/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<!-- 微信登录过滤器 -->
	<filter>
		<filter-name>WechatLoginFilter</filter-name>
		<filter-class>steed.filter.WechatLoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>WechatLoginFilter</filter-name>
		<url-pattern>/market/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<!-- 终端登录过滤器 -->
	<filter>
		<filter-name>ClientFilter</filter-name>
		<filter-class>steed.ext.filter.ClientFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ClientFilter</filter-name>
		<url-pattern>/client/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<!-- #终端登录过滤器 -->
	
	<!-- struts2过滤器 -->
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>steed.filter.StrutsFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.act</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<!-- 验证码servlet -->
	<servlet>
		<servlet-name>securityCode</servlet-name>
		<servlet-class>steed.servlet.SecurityCode</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>securityCode</servlet-name>
		<url-pattern>/securityCode.jpg</url-pattern>
	</servlet-mapping>
	<!-- ueditor Servlet -->
	<servlet>
		<servlet-name>ueditorServlet</servlet-name>
		<servlet-class>steed.servlet.UeditorServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ueditorServlet</servlet-name>
		<url-pattern>/ueditorController.jsp</url-pattern>
	</servlet-mapping>
	
	<!-- /修复ueditor多图上传路径错误bug -->
	<servlet-mapping>
		<servlet-name>ueditorServlet</servlet-name>
		<url-pattern>/plugin/ueditor/dialogs/image/ueditorController.jsp</url-pattern>
	</servlet-mapping>
	<!-- #修复ueditor多图上传路径错误bug -->
	
</web-app>